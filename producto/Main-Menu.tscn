func _ready():
	OS.center_window()
	if GlobalVar.load_game() == null: #si el archivo no existe
		$Player/LineEdit.show()
	else:
		$Player/LineEdit.show()
		$Player/LineEdit.placeholder_text = ''
		$Player/LineEdit.text = GlobalVar.player.username
		

func _on_Jugar_pressed():
	if GlobalVar.player.username != null: #solo se puede jugar si fue creado el player, no funciona me parece
		get_tree().change_scene(\"res://Mapa.tscn\")
	

func _on_NuevaPartida_pressed():
	$AdvertenciaBorrar.show()
	if GlobalVar.load_game() != null:
		#Como se hace para borrar el archivo? 
		pass

func _on_LineEdit_text_entered(new_text):
	#controlar si anda en el celular!!!!!!
	GlobalVar.player.username = new_text
	GlobalVar.save_game() #me parece que no funciona


func _on_Si_pressed():
	#borrar la partida, como se hace?
	pass # Replace with function body.


func _on_No_pressed():
	#no hace nada, vuelve al menú
	$AdvertenciaBorrar.hide()
