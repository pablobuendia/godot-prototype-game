script/source = "extends Control

func _ready():
	OS.center_window()
	if (GlobalVar.load_game() == null || GlobalVar.player==null): #si el archivo no existe
		GlobalVar.config();
		$LineEdit.show()
	else:
		get_tree().change_scene(\"res://Main-Menu.tscn\");

func _on_Continuar_pressed():
	if ($LineEdit.text != null && $LineEdit.text != ''):
		print(GlobalVar.player);
		GlobalVar.player.username = $LineEdit.text;
		GlobalVar.save_game();
		get_tree().change_scene(\"res://Main-Menu.tscn\")
	else:
		$AdvertenciaBorrar.show();
	


func _on_LineEdit_text_entered(new_text):
	#controlar si anda en el celular!!!!!!
	if GlobalVar.player==null:
		GlobalVar.player.username = new_text
		GlobalVar.save_game() 


func _on_Si_pressed():
	#Poner null el diccionario
	$AdvertenciaBorrar.show()
	GlobalVar.player = null
	GlobalVar.save_game()
	_ready()
	pass


func _on_No_pressed():
	#no hace nada, vuelve al menú
	$AdvertenciaBorrar.hide()

